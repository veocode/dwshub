{
    "name": "nginx",
    "image": "nginx:alpine",
    "build": "",
    "assets": {
        "service": [
            {
                "type": "copy",
                "dst": "nginx.conf"
            }
        ],
        "storage": [
            {
                "type": "mkdir",
                "dst": "logs"
            }
        ]
    },
    "settings": [
        {
            "type": "mount",
            "src": "{service}/nginx.conf",
            "dst": "/etc/nginx/conf.d/nginx.conf"
        },
        {
            "type": "mount",
            "src": "{storage}/logs",
            "dst": "/var/log/nginx"
        }
    ]
}