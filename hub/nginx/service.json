{
    "name": "nginx",
    "image": "nginx:alpine",
    "build": "",
    "assets": {
        "service": [
            {
                "type": "copy",
                "dst": "nginx.conf"
            }
        ],
        "storage": [
            {
                "type": "mkdir",
                "dst": "logs"
            }
        ]
    },
    "settings": [
        {
            "name": "port",
            "default": "80",
            "export": false
        },
        {
            "name": "doc_root",
            "default": "/var/www/public",
            "export": false
        },
        {
            "name": "fastcgi_pass",
            "default": "fpm:9000",
            "export": false
        }
    ],
    "volumes": [
        {
            "src": "{service}/nginx.conf",
            "dst": "/etc/nginx/conf.d/nginx.conf"
        },
        {
            "src": "{storage}/logs",
            "dst": "/var/log/nginx"
        }
    ]
}